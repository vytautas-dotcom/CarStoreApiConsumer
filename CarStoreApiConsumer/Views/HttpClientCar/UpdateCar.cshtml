@model Car
@{
    ViewBag.Title = "Update the Car";
}

<h2 class="text-center">@ViewBag.Title</h2>
<div>
    <form asp-action="UpdateCar" method="post">
        <div class="form-group">
            <div class="form-group">
                <input type="hidden" asp-for="Id" name="carId" />
                <input type="hidden" asp-for="Id" />
                <input type="hidden" value="@ViewBag.StoreId" name="storeId" />
            </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-grop">
                    <label asp-for="DateRelease">Release Date</label>
                    <input asp-for="DateRelease" class="form-control" />
                </div>
                <div class="form-grop">
                    <label asp-for="Price">Price</label>
                    <input asp-for="Price" class="form-control" type="number" />
                </div>
                <div class="form-grop">
                    <label asp-for="Remark">Remark</label>
                    <input asp-for="Remark" class="form-control" />
                </div>
                <div class="form-grop">
                    <label asp-for="IsInStore">Is in store</label>
                    <input asp-for="IsInStore" class="form-control" type="checkbox" />
                </div>
        </div>
        <button type="submit" class="btn btn-primary" >Udate</button>
    </form>
</div>