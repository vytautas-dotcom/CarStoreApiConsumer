@model Store
@{
    ViewBag.Title = "Add new car store";
    int i = 0;
}

<h2 class="text-center">@ViewBag.Title</h2>
<div>
    <form method="post">
        <div class="form-group">
            <input type="hidden"  asp-for="Id" class="form-control" value="@ViewBag.Id" name="storeID"/>
        </div>
        <div class="form-group">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <div id="newCar" style="display:none;">
                <div class="form-group">
                    <input type="hidden" asp-for="CarList[i].Id" class="form-control newId" value="@Guid.NewGuid()" />
                </div>
                <div class="form-group">
                    <label asp-for="CarList[i].Name">Name</label>
                    <input asp-for="CarList[i].Name" class="form-control" value=""/>
                </div>                      
                <div class="form-group">    
                    <label asp-for="CarList[i].DateRelease">Release Date</label>
                    <input asp-for="CarList[i].DateRelease" class="form-control" value=""/>
                </div>                      
                <div class="form-group">    
                    <label asp-for="CarList[i].Price">Price</label>
                    <input asp-for="CarList[i].Price" class="form-control" type="number" value=""/>
                </div>                      
                <div class="form-group">    
                    <label asp-for="CarList[i].Remark">Remark</label>
                    <input asp-for="CarList[i].Remark" class="form-control" value=""/>
                </div>                      
                <div class="form-group">    
                    <label asp-for="CarList[i].IsInStore">Is in store</label>
                    <input asp-for="CarList[i].IsInStore" class="form-control" type="checkbox" value=""/>
                </div>
            </div>
            <label id="carList">Click to get car form</label>
        </div>
        <button type="submit" class="btn btn-primary" id="addCar">Add</button>
    </form>
</div>

@section scripts{
    
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#carList").click(function () {
                $("#newCar").toggle("slow");
            });
        });
    </script>
}