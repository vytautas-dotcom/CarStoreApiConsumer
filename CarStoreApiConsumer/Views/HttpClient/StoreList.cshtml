@model IEnumerable<Store>
@{
    ViewBag.Title = "List of all stores";
}

<h2 class="text-center">@ViewBag.Title</h2>

@foreach (var store in Model)
{
    <div class="container fluid p-0 m-0">
        <div class="row">
            <div class="col-3">
                <div class="row">
                    <div class="col-12">@store.City</div>
                    <div class="col-12">@store.Description</div>
                </div>
            </div>
            <div class="col-9">
                <table class="table table-striped table-bordered m-0 p-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Date of release</th>
                            <th>Price</th>
                            <th>Remark</th>
                            <th>Is in store</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in store.CarList)
                        {
                            <tr>
                                <td>@car.Name</td>
                                <td>@car.DateRelease</td>
                                <td>@car.Price</td>
                                <td>@car.Remark</td>
                                <td>@car.IsInStore</td>
                                <td><a asp-action="UpdateStore" asp-route-carId="@car.Id" asp-route-storeId="@store.Id" class="btn btn-sm btn-outline-dark">Update</a></td>
                                <td>
                                    <form asp-action="DeleteStore" method="post">
                                        <input type="hidden" value="@car.Id" name="carId"/>
                                        <input type="hidden" value="@store.Id" name="storeId"/>
                                        <input type="submit" class="btn btn-sm btn-outline-danger" value="Delete"/>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

